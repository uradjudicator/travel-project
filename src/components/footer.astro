---
import Mailbox from "../assets/images/mailbox.png";
import BrandLogo from "../assets/icons/brand-logo.png";
---

<footer class="up-side">
  <div class="container">
    <!-- FOOTER TOP -->
    <div class="footer-top">
      <div class="subscribe">
        <p class="top-title">Subscribe <br /> Newsletter</p>
        <p class="title">The Travel</p>
        <p class="text">
          Get inspired! Receive travel discounts, tips and behind the scenes
          stories.
        </p>

        <div class="email">
          <input type="text" name="" id="" placeholder="Your email address" />
          <button class="btn">Subscribe</button>
        </div>
      </div>
      <div class="image">
        <img src={Mailbox} alt="" />
      </div>
    </div>
   
  </div>
  
</div>
</footer>

<footer class="down-side">
  <div class="container">
     <!-- FOOTER DOWN -->
     <div class="footer-down">
      <div class="connect">
        <div class="logo-img">
          <img src={BrandLogo} alt="" class="logo" />
        </div>
        <div class="sci">
          <a href="" class="sci-link">
            <i class="fab fa-facebook"></i>
          </a>
          <a href="" class="sci-link">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="" class="sci-link">
            <i class="fab fa-youtube"></i>
          </a>
          <a href="" class="sci-link">
            <i class="fab fa-instagram"></i>
          </a>
        </div>
      </div>
      <!-- wrapper -->
      <div class="wrapper">
        <!-- block -->
        <div class="block">
          <p class="header">Our Destinations</p>
          <div class="info">
            <p class="text">Canada</p>
            <p class="text">Alaksa</p>
            <p class="text">France</p>
            <p class="text">Iceland</p>
          </div>
        </div>
        <!-- block -->
        <div class="block">
          <p class="header">Our Activities</p>
          <div class="info">
            <p class="text">Northern Lights</p>
            <p class="text">Cruising & sailing</p>
            <p class="text">Multi-activities</p>
            <p class="text">Kayaing</p>
          </div>
        </div>
        <!-- block -->
        <div class="block">
          <p class="header">Travel Blogs</p>
          <div class="info">
            <p class="text">Bali Travel Guide</p>
            <p class="text">Sri Lanks Travel Guide</p>
            <p class="text">Peru Travel Guide</p>
            <p class="text">Bali Travel Guide</p>
          </div>
        </div>
        <!-- block -->
        <div class="block">
          <p class="header">About Us</p>
          <div class="info">
            <p class="text">Our Story</p>
            <p class="text">Work with us</p>
          </div>
        </div>
        <!-- block -->
        <div class="block">
          <p class="header">Contact Us</p>
          <div class="info">
            <p class="text">Our Story</p>
            <p class="text">Work with us</p>
          </div>
        </div>
      </div>
    </div>
  </div>

</footer>

<style lang="scss">
  @import "../assets/styles/normolize.scss";
  .up-side {
    position: relative;
    top: 152px;
    
    font-family: 'Montserrat';
    .footer-top {
      border-radius: 20px;
      background: #cdeae1;
      display: flex;
      justify-content: space-between;
      padding-right: 24px;
      .subscribe {
        padding: 24px;
        .top-title {
          font-size: 44px;
          font-weight: 700;
          color: #112211;
        }
        .title {
          margin: 24px 0 8px;
          font-size: 20px;

          font-weight: 700;
          color: #112211;
          opacity: 0.8;
        }
        .text {
          font-size: 16px;
          font-weight: 500;
          color: #112211;
          opacity: 0.7;
        }
        .email {
          display: flex;
          margin-top: 16px;
          input {
            width: 457px;
            padding: 8px 0 8px 16px;
            height: 40px;
            font-size: 16px;
            font-weight: 400;
            color: #1c1b1f;
            margin-right: 16px;
          }
          .btn {
            font-size: 14px;
            font-weight: 400;
            padding: 8px 16px;
            color: #fff;
            border-radius: 4px;
            background: var(--blackish-green, #121);
          }
        }
      }
      .image {
        max-width: 400px;
      }
    }
  }
  .down-side{
    background-color: var(--mint-green, #8dd3bb);
    padding: 184px 0 64px 0;
    .footer-down {
      display: flex;
      padding: 64px 0;

      .connect {
        display: flex;
        flex-direction: column;
        .logo-img {
          width: 120px;
          margin-bottom: 24px;
          img {
            max-width: 100%;
          }
        }
        a {
          color: #000;
          margin-right: 11px;
        }
      }
      .wrapper {
        margin-left: 140px;
        display: flex;
        .block {
          text-align: left;
          margin-left: 50px;
          .header {
            color: #112211;
            font-size: 16px;
            font-weight: 700;
            margin-bottom: 16px;
          }
          .info {
            display: flex;
            flex-direction: column;
            .text {
              margin-bottom: 12px;
              font-size: 14px;
              font-weight: 500;
              opacity: 0.7;
            }
          }
        }
      }
    }
  }

</style>
