---
import IstanbulIcon from "../../assets/icons/istanbul.jpg";
import HeroCard from "../hero-card.astro";
import Button from "../button.astro";
---

<section class="perfect-trip">
    <div class="container">
        <div class="top-part">
            <div class="desc">
                <h2 class="title">Plan your perfect trip</h2>
                <p class="text">
                    Search Flights & Places Hire to our most popular
                    destinations
                </p>
            </div>
            <Button>See more places</Button>
        </div>
        <div class="wrapper">
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
           
        </div>
    </div>
</section>

<style lang="scss">
    @import "../../assets/styles/normolize.scss";

    .perfect-trip {
        .top-part {
            display: flex;
            justify-content: space-between;
            align-items: center;
            .title {
                font-size: 32px;
                font-weight: 600;
            }
            .text {
                font-size: 16px;
                font-weight: 600;
                color: var(--blackish-green, #121);
                opacity: 0.75;
                margin-top: 16px;
            }
            
        }

        .wrapper{
            margin-top: 40px;
            display: flex;
            flex-wrap: wrap;
            .card{
                padding: 16px;
                display: flex;
                .image{
                    margin-right: 16px;
                    width: 90px;
                    height: 90px;
                    img{
                        max-width: 100%;
                        height: 100%;
                    }
                }
                .flight-info{
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    .contry{
                        color: var(--blackish-green, #121);
                        opacity: 0.7;
                        font-size: 16px;
                        font-weight: 600;
                    }
                    .info-wrapper{
                        display: flex;
                        gap: 8px;
                        margin-top: 8px;
                        .dot{
                            margin: 0 8px;
                        }
                    }
                }
            }
        }
    }
</style>
