---
import IstanbulIcon from "../../assets/icons/istanbul.jpg";
import HeroCard from "../hero-card.astro";
import Button from "../button.astro";
import HoverButton from "../hover-button.astro";
---

<section class="perfect-trip">
    <div class="container">
        <div class="top-part">
            <div class="desc">
                <h2 class="title">Plan your perfect trip</h2>
                <p class="text">
                    Search Flights & Places Hire to our most popular
                    destinations
                </p>
            </div>
            <Button>See more places</Button>
        </div>
        <div class="wrapper">
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
            <HeroCard />
        </div>

        <div class="flight-card">
            <div class="wrapper">
                <div class="card">
                    <p class="card-title">Flights</p>
                    <p class="text">
                        Search Flights & Places Hire to our most popular
                        destinations
                    </p>
                    <HoverButton>Show Flights</HoverButton>
                </div>
                <div class="card">
                    <p class="card-title">Flights</p>
                    <p class="text">
                        Search Flights & Places Hire to our most popular
                        destinations
                    </p>
                    <HoverButton>Show Flights</HoverButton>
                </div>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    @import "../../assets/styles/normolize.scss";

    .perfect-trip {
        .top-part {
            display: flex;
            justify-content: space-between;
            align-items: center;
            .title {
                font-size: 32px;
                font-weight: 600;
            }
            .text {
                font-size: 16px;
                font-weight: 600;
                color: var(--blackish-green, #121);
                opacity: 0.75;
                margin-top: 16px;
            }
        }

        .wrapper {
            margin-top: 40px;
            display: flex;
            flex-wrap: wrap;
            .card {
                padding: 16px;
                display: flex;
                .image {
                    margin-right: 16px;
                    width: 90px;
                    height: 90px;
                    img {
                        max-width: 100%;
                        height: 100%;
                    }
                }
                .flight-info {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    .contry {
                        color: var(--blackish-green, #121);
                        opacity: 0.7;
                        font-size: 16px;
                        font-weight: 600;
                    }
                    .info-wrapper {
                        display: flex;
                        gap: 8px;
                        margin-top: 8px;
                        .dot {
                            margin: 0 8px;
                        }
                    }
                }
            }
        }
        .flight-card {
            margin-top: 80px;
            .wrapper {
                display: flex;
                justify-content: space-between;
                align-items: center;
               
                .card {
                    background-image: url(../../assets/images/card-bg-image.jpg);
                    background-repeat: no-repeat;
                    background-position: center;
                    background-size: cover;
                    overflow: hidden;
                    width: 604px;
                    height: 559px;
                    color: #fff;
                    text-align: center;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: flex-end;
                    cursor: pointer;
                    .card-title{
                        font-size: 40px;
                        font-weight: 700;
                    }
                    .text{
                        font-size: 16px;
                        font-weight: 400;
                        margin: 8px 0 16px;
                    }
                }
            }
        }
    }
</style>
