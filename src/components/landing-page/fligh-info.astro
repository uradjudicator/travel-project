<section class="flight-info">
  <div class="container">
    <div class="wrapper">
      <div class="flights">
        <a href="" class="flight-1">
          <i class="fa-solid fa-plane"></i>
          <p class="about-flight">Find Flight</p>
        </a>
        <div class="content"></div>
        <a href="" class="flight-2">
          <i class="fa-solid fa-bed"></i>
          <p class="about-stay">Find Stays</p>
        </a>
      </div>

      <!-- inputs -->

      <div class="inputs">
        <!-- input-info -->
        <div class="input-info">
          <p class="text">From - To</p>
          <input type="text" name="" placeholder="Lahore - Karachi" />
          <i class="fa-solid fa-right-left"></i>
        </div>
        <!-- input-info -->
        <div class="input-info">
          <p class="text">Trip</p>
          <input type="text" name="" placeholder="Return" />
          <i class="fa-solid fa-chevron-down"></i>
        </div>
        <!-- input-info -->
        <div class="input-info">
          <p class="text">Depart- Return</p>
          <input type="date" name="" placeholder="07 Nov 22 - 13 Nov 22" />
        </div>
        <!-- input-info -->
        <div class="input-info">
          <p class="text">Passenger - Class</p>
          <input type="text" name="" placeholder="1 Passenger, Economy" />
        </div>
      </div>

      <!-- show-flight -->
      <div class="additional-buttons">
        <div class="promo-code">
          <i class="fa-solid fa-plus"></i>
          <p class="text">Add Promo Code</p>
        </div>
        <div class="seeing-flight">
          <i class="fa-solid fa-paper-plane"></i>
          <p class="text">Show Filghts</p>
        </div>
      </div>
    </div>
  </div>
</section>

